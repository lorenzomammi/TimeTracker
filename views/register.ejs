<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/meta.ejs") %>
    <title>Registration</title>
</head>
<body>
    <div class="container">
      <div class="modal-box">
        <h1 class="mb-4">Registration</h1>
        <form action="/register" method="POST">
            <div class="mb-3">
                <input type="text" class="form-control" required id="register-name" name="name" placeholder="Nome">
            </div>
            <div class="mb-3">
              <input type="email" class="form-control" required id="register-email" name="email" placeholder="Indirizzo email">
            </div>
            <div class="mb-4">
              <input type="password" class="form-control" required id="register-password" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-success">Register</button>
            <% if (flashMessages.error && flashMessages.error.length > 0) { %>
              <div class="alert alert-danger mt-3 flash-message" role="alert"><i class="fas fa-times-circle"></i>&nbsp;&nbsp;<%= flashMessages.error %> </div>
            <% } %>
            <div class="mt-3">
                Se hai gi√† un account <a href="/login">Accedi</a>
            </div>
          </form>
        </div>
    </div>
  <%- include("./partials/footer.ejs") %>